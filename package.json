{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "description": "E-Commerce Multi-Stack Platform",
  "private": true,
  "scripts": {
    "setup:env": "node scripts/setup-env.js",
    "install:all": "node scripts/install-all.js",
    "install:all:force": "node scripts/install-all.js --force",
    "install:all:reinstall": "node scripts/install-all.js --reinstall",
    "dev:express-mongodb": "cd servers/express/express-mongodb && npm run dev",
    "dev:express-mongodb-3yr": "cd servers/express/express-mongodb-3yr && npm run dev",
    "dev:express-mongodb-6yr": "cd servers/express/express-mongodb-6yr && npm run dev",
    "dev:express-mysql": "cd servers/express/express-mysql && npm run dev",
    "dev:nestjs-mongodb": "cd servers/nestjs/nestjs-mongodb && npm run start:dev",
    "dev:nestjs-mongodb-3yr": "cd servers/nestjs/nestjs-mongodb-3yr && npm run start:dev",
    "dev:nestjs-mongodb-6yr": "cd servers/nestjs/nestjs-mongodb-6yr && npm run start:dev",
    "dev:nestjs-mysql": "cd servers/nestjs/nestjs-mysql && npm run start:dev",
    "dev:nestjs-mysql-3yr": "cd servers/nestjs/nestjs-mysql-3yr && npm run start:dev",
    "dev:nestjs-mysql-6yr": "cd servers/nestjs/nestjs-mysql-6yr && npm run start:dev",
    "dev:laravel-mongodb": "cd servers/laravel/laravel-mongodb && php artisan serve --port=5004",
    "dev:laravel-mongodb-3yr": "cd servers/laravel/laravel-mongodb-3yr && php artisan serve --port=5012",
    "dev:laravel-mongodb-6yr": "cd servers/laravel/laravel-mongodb-6yr && php artisan serve --port=5013",
    "dev:laravel-mysql": "cd servers/laravel/laravel-mysql && php artisan serve --port=5005",
    "dev:laravel-mysql-3yr": "cd servers/laravel/laravel-mysql-3yr && php artisan serve --port=5014",
    "dev:laravel-mysql-6yr": "cd servers/laravel/laravel-mysql-6yr && php artisan serve --port=5015",
    "switch:express-mongodb": "bash scripts/switch-stack.sh express-mongodb || scripts\\switch-stack.bat express-mongodb",
    "switch:express-mongodb-3yr": "bash scripts/switch-stack.sh express-mongodb-3yr || scripts\\switch-stack.bat express-mongodb-3yr",
    "switch:express-mongodb-6yr": "bash scripts/switch-stack.sh express-mongodb-6yr || scripts\\switch-stack.bat express-mongodb-6yr",
    "switch:express-mysql": "bash scripts/switch-stack.sh express-mysql || scripts\\switch-stack.bat express-mysql",
    "switch:nestjs-mongodb": "bash scripts/switch-stack.sh nestjs-mongodb || scripts\\switch-stack.bat nestjs-mongodb",
    "switch:nestjs-mongodb-3yr": "bash scripts/switch-stack.sh nestjs-mongodb-3yr || scripts\\switch-stack.bat nestjs-mongodb-3yr",
    "switch:nestjs-mongodb-6yr": "bash scripts/switch-stack.sh nestjs-mongodb-6yr || scripts\\switch-stack.bat nestjs-mongodb-6yr",
    "switch:nestjs-mysql": "bash scripts/switch-stack.sh nestjs-mysql || scripts\\switch-stack.bat nestjs-mysql",
    "switch:nestjs-mysql-3yr": "bash scripts/switch-stack.sh nestjs-mysql-3yr || scripts\\switch-stack.bat nestjs-mysql-3yr",
    "switch:nestjs-mysql-6yr": "bash scripts/switch-stack.sh nestjs-mysql-6yr || scripts\\switch-stack.bat nestjs-mysql-6yr",
    "switch:laravel-mongodb": "bash scripts/switch-stack.sh laravel-mongodb || scripts\\switch-stack.bat laravel-mongodb",
    "switch:laravel-mongodb-3yr": "bash scripts/switch-stack.sh laravel-mongodb-3yr || scripts\\switch-stack.bat laravel-mongodb-3yr",
    "switch:laravel-mongodb-6yr": "bash scripts/switch-stack.sh laravel-mongodb-6yr || scripts\\switch-stack.bat laravel-mongodb-6yr",
    "switch:laravel-mysql": "bash scripts/switch-stack.sh laravel-mysql || scripts\\switch-stack.bat laravel-mysql",
    "switch:laravel-mysql-3yr": "bash scripts/switch-stack.sh laravel-mysql-3yr || scripts\\switch-stack.bat laravel-mysql-3yr",
    "switch:laravel-mysql-6yr": "bash scripts/switch-stack.sh laravel-mysql-6yr || scripts\\switch-stack.bat laravel-mysql-6yr",
    "client": "cd client && npm start",
    "stop:all": "pkill -f 'node.*server.js' || taskkill /F /IM node.exe 2>nul || true"
  },
  "keywords": [
    "ecommerce",
    "multi-stack",
    "express",
    "nestjs",
    "laravel",
    "react"
  ],
  "author": "",
  "license": "ISC"
}

