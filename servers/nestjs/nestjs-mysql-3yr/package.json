{
  "name": "nestjs-mysql-server-3yr",
  "version": "1.0.0",
  "description": "E-Commerce Platform Backend - NestJS + MySQL (2021)",
  "author": "",
  "private": true,
  "license": "ISC",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
